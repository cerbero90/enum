{
    "name": "cerbero/enum",
    "type": "library",
    "description": "PHP library to extend enum functionalities.",
    "keywords": [
        "enum",
        "enumeration"
    ],
    "homepage": "https://github.com/cerbero90/enum",
    "license": "MIT",
    "authors": [{
        "name": "Andrea Marco Sartori",
        "email": "andrea.marco.sartori@gmail.com",
        "homepage": "https://github.com/cerbero90",
        "role": "Developer"
    }],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "scrutinizer/ocular": "^1.9",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Cerbero\\Enum\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\Enum\\": "tests"
        }
    },
    "scripts": {
        "test": "pest",
        "check-style": "phpcs --standard=PSR12 src",
        "fix-style": "phpcbf --standard=PSR12 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
